{
	"extends": [
		"eslint:recommended", 
		"plugin:react/recommended",
		"plugin:flowtype/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"plugins": ["react", "flowtype"],
	"rules": {
		"semi": 2,
		"react/display-name": 0,
		"react/prop-types": [2, {"ignore": ["children"]}]
	},
	"env": {
		"browser": true,
		"node": true
	}
}
